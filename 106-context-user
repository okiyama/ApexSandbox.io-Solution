public Map<String,String> getContextUserInformation(){
    Map<String, String> toRet = new Map<String, String>();
    
    toRet.put('EmailId', UserInfo.getUserEmail());
    toRet.put('ProfileId', UserInfo.getProfileId());
    toRet.put('Type', UserInfo.getUserType());
    toRet.put('UserName', UserInfo.getUserName());

    return toRet;
}